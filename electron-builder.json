{
  "appId": "com.theravault.app",
  "productName": "TheraVault",
  "artifactName": "${productName}-${os}.${ext}",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.medical",
    "target": ["dmg"],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": ["nsis"],
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Office",
    "icon": "build/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "${productName}-Setup.${ext}"
  }
}
